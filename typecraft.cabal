category:            Game
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable typecraft
  main-is:             Main.hs
  other-modules: AbilityUtils, Behavior, Types, Client, Overture, GameData, Map, QuadTree.QuadTree, Art, AnimBank, Behavior.Scripts
  ghc-options: -Wall
  default-extensions: DataKinds
                    , FlexibleInstances
                    , GADTs
                    , PolyKinds
                    , RecordWildCards
                    , ScopedTypeVariables
                    , TupleSections
                    , TypeApplications
                    , TypeFamilies
                    , ViewPatterns

  build-depends: base
               , base-prelude
               , containers
               , array
               , ecstasy
               , dlist
               , frpnow
               , astar
               , htiled
               , jps
               , deepseq
               , lens
               , linear
               , monad-coroutine
               , mtl
               , sequoia
               , transformers
               , unordered-containers
               , recursion-schemes
               , vector
               , bones
               , bytestring
               , aeson
               , string-conv
               , errors
               , rio
               , text
  hs-source-dirs:      src
  default-language:    Haskell2010

